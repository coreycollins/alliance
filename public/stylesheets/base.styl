html, body
  margin 0
  padding 0

body
  font 14px "Helvetica Neue", Helvetica, Arial, sans-serif
  line-height 1.4em
  background-image: url('/images/paper_fibers.png')
  color #333333
  -webkit-font-smoothing antialiased

#sidebar
  background-image: url('/images/pw_maze_black.png')
  width: 100%; 
  overflow: auto
  position: fixed
  top: 0
  left: 0
  z-index:10000

#content
  border-right: 1px solid #ccc
  background: #e9e9e9
  max-width: 479px
  width: 100%
  position: absolute
  top: 80px
  min-height: 100%

#mentions
  position: fixed
  right: 0
  top: 80px
  height: 100%
  overflow: auto
  width: 40%
  min-width: 200px
  background-image: url('/images/paper_fibers.png')
  display: none
  //z-index: -10000


#mentions-list
  list-style: none
  overflow: hidden
  margin: 10px 0 0 0
  padding: 0 10px 10px 10px

.header-section
  width: 80%
  padding: 10px 0
  margin: 0 auto

#archive
  margin: 13px 0 10px 10px

#logo
  float: right
  font-size: 30px
  margin: 30px 20px 0 0
  z-index: -100
  font-weight: bold
  color: #fff

#goals-list
  list-style: none
  margin: 0
  
#new-goal
  margin: 10px 0 10px 10px
  width: 90%
  padding: 6px

#user-list
  list-style: none
  float: left
  margin-right: -300000px

.user
  float: left
  overflow-y: hidden

  .bar
    background: blue
    height: 5px
    display: none
    position: relative
    margin-top: -5px

.selected 
  .bar
    display: block

.goal
  padding: 10px 15px
  border-bottom: 1px solid #ccc
  border-top: 1px solid #fff


  .edit
    display: none

  .action
    display: inline-block
    margin-top: 15px
    float: right
    cursor: pointer
    width: 30px
    text-align: center

  .details
    display: inline-block
    text-shadow: 1px 1px 1px #fff;
    width: 70%

  .hashtag
    font-size: 16px
    width: 100%

  .prog
    float: left
    margin-top: 10px
    margin-right: 20px 
    font-size: 15px
    font-weight: bold
    color: blue
    width: 20px

  .description
    margin-top: 2px
    color: #777
    font-size: 12px
    width: 100%

.goal:last-child
  border-bottom: none

.goal:first-child
  border-top: none

.active
  background: -webkit-linear-gradient(top, #3e9cef 0%,#1e69de 100%);
  color: #fff
  border-top: none
  border-right: 2px solid #1e69de

  .prog
    color: #fff

  .details
    text-shadow: none

  .description
    color: #fff

.completed
  background: #ddd


.editing 
  .edit
    display: block

  .description
    display: none

.edit
  width: 70%

.mention
  margin: 0 0 10px 0

.message
  padding: 15px
  border-radius: 15px
  border: 1px solid #ddd
  background: -webkit-linear-gradient(top, #f2f9fe 0%,#d6f0fd 100%);

.message:hover
  cursor: pointer

.seperator
  line-height: 13px
  font-weight: bold
  font-size: 20px
  color: #aaa
  text-align: center


.mention:last-child
  .seperator
    display:none

@media all and (max-width: 800px)
  #mentions
    border-left: 1px solid #ccc
